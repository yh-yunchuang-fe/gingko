{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "module": "commonjs",
        "jsx": "react-native",
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["components/*"],
            "@src/*": ["src/*"],
            "@style/*": ["src/style/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"],
        },
    },
    "extends": "expo/tsconfig.base"
}
