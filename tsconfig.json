{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-native",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "./components/"
  ],
  "exclude": [
    "node_modules",
    "expo-samples"
  ]
}
